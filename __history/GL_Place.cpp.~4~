//---------------------------------------------------------------------------

#pragma hdrstop

#include "GL_Place.h"
//---------------------------------------------------------------------------
#pragma package(smart_init)

#include "GL_Port.h"
//---------------------------------------------------------------------------

TGLPlace::TGLPlace()
{
	name = L"Новый объект";
	mark = L"...";
	node = NULL;
	num = 0;

}

TGLPlace::TGLPlace(WideString nm, TTreeNode* nd, int nn)
{
	name = nm;
	mark = L"...";
	node = nd;
	num = nn;
}

TGLPlace::~TGLPlace()
{

}

int TGLPlace::add_port(WideString nm, int pnum)
{
	int nmb = port_list.count() + 1;
	prt = new TGLPort(nm, NULL, nmb);

	if (port_list.add(prt) != 0)
	{
		delete prt;
		return -1;  //fail to add the port
	}
	else
	{
		WideString ss;
		ss.printf(L"%d.%d [", pnum, nmb);
		ss = ss+nm;
		ss = ss+L"]";
		TTreeNode* ndd = tree->Items->AddChild(node, ss); ndd->ImageIndex = 2; ndd->SelectedIndex = 2;
		node->Expand(true);

		prt->SetTree(tree);
		prt->SetNode(ndd);

		return 0;
	}
}

void TGLPlace::SetTree(TTreeView* t)
{
	tree = t;
}

void TGLPlace::SetNode(TTreeNode* n)
{
	node = n;
}
