// Предварительное объявление классов
class TGLPlace;
class TGLPort;
class TGLЫутыщк;

template<typename T>
class TGLList
{

public:

	TGLList();
	~TGLList();

public:

	int add(T* obj);
	int add(WideString nm, TTreeNode* nd, int nn);
    int count(void);

	T* find(WideString nm);
	T* find(TTreeNode* nd);
	T* find(int nn);

	int remove(WideString nm);
	int show(void);


public:

	std::list<T*> m_list;
};


